<html>
    <head>
        <title> Home</title>
        <link rel="stylesheet" type="text/css" href="/public/css/styles.css">
    </head>
    <body>    
    <%- include('partials/header') %>
    <h1>Compose</h1>
    <form class="/compose" method="POST" >
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" class="postTitle" id="postTitle" name="postTitle" placeholder="<%= result.title %>">
        <label>Post</label>
        <textarea class="form-control" id="postTitle" name="postBody" rows="5" cols="30"> <%= result.content %> </textarea>
      </div>
      <button class="btn btn-primary" type="submit" id="addPost" name="addPost" >Publish</button>
    </form>
            
    <%- include('partials/footer') %>
  </body>
</html>